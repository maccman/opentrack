{
  "name": "opentrack-analytics",
  "type": "module",
  "version": "1.0.0",
  "description": "A Segment-compatible client-side analytics library for OpenTrack. Drop-in replacement for Analytics.js with TypeScript support.",
  "author": "OpenTrack Team",
  "license": "MIT",
  "homepage": "https://github.com/your-org/libroseg/tree/main/apps/client",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/libroseg.git",
    "directory": "apps/client"
  },
  "bugs": {
    "url": "https://github.com/your-org/libroseg/issues"
  },
  "keywords": [
    "analytics",
    "tracking",
    "segment",
    "opentrack",
    "client-side",
    "typescript",
    "browser",
    "events"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "import": "./dist/analytics.esm.js",
        "require": "./dist/analytics.umd.js",
        "script": "./dist/analytics.iife.js"
      },
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/analytics.esm.js",
      "require": "./dist/analytics.umd.js",
      "script": "./dist/analytics.iife.js",
      "types": "./dist/analytics.d.ts"
    },
    "./server": {
      "import": "./dist/server.esm.js",
      "require": "./dist/server.cjs.js",
      "types": "./dist/server.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:lib && pnpm run build:browser",
    "build:lib": "vite build",
    "build:browser": "vite build --config vite.browser.config.ts",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "clean": "rm -rf dist",
    "dev": "vite",
    "preview": "vite preview",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0"
  },
  "browser": "./dist/analytics.umd.js"
}
